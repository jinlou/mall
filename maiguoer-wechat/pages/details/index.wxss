page {
  background: white;
}

swiper {
  width: 100%;
  height: 400rpx;
  background: white;
}

.slide-image {
  display: block;
  width: 100%;
  height: 400rpx;
}

.box {
  width: 100%;
  height: 100rpx;
  background: white;
  border-top: 3rpx solid #ccc;
  border-bottom: 3rpx solid #ccc;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 30rpx;
  margin-top: 15rpx;
  padding-left: 15rpx;
}

.price {
  color: red;
  font-size: 30rpx;
  padding-left: 15rpx;
}

.dibu {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0rpx;
}

.left {
  width: 50%;
  height: 100%;
  background: #ff9800;
  float: left;
}

.right {
  width: 50%;
  height: 100%;
  background: #e3211e;
  float: left;
}

.text {
  display: block;
  color: white;
  line-height: 100rpx;
  text-align: center;
  font-size: 25rpx;
}

.nav {
  width: 700rpx;
  height: 70rpx;
  background: #f8f8f8;
  margin: auto;
  display: flex;
  border-radius: 5px;
  border: 1px solid #aeaeae;
}

.boxtwo {
  margin-bottom: 85rpx;
}

.default {
  width: 100%;
  line-height: 70rpx;
  text-align: center;
  border-right: 1px solid #aeaeae;
  color: #aeaeae;
  font-weight: bold;
  margin: auto;
  font-size: 28rpx;
}

.red {
  width: 700rpx;
  line-height: 70rpx;
  text-align: center;
  background: red;
  color: white;
  border-right: 1px solid #aeaeae;
  font-weight: bold;
  font-size: 28rpx;
}

.boxtwo-tab-nav {
  display: inline-block;
  width: 50%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #ededed;
  box-sizing: border-box;
  text-align: center;
  color: black;
  font-size: 30rpx;
}

.on {
  color: #405f80;
  border-bottom: 5rpx solid #405f80;
}

.img_one {
  margin-top: 1rpx;
}

.boxtwo_image {
  width: 100%;
  height: auto;
  display: block;
}

.product {
  font-size: 30rpx;
  margin: 50rpx auto;
  text-align: center;
}

.goods_info {
  background: #e8e8e8;
  padding: 16rpx 20rpx;
}

.goods_name {
  font-size: 32rpx;
  color: #333;
}

.desc {
  font-size: 26rpx;
  color: #999;
}

.goods_price {
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
}

.price1 {
  font-size: 32rpx;
  color: red;
}

.price2 {
  font-size: 26rpx;
  color: #666;
  text-decoration: line-through;
  margin-left: 16rpx;
}

.input_all {
  background: #e8e8e8;
  margin-top: 6rpx;
}

.input_all .input_outter:first-child {
  border-bottom: 1px solid #333;
}

.input_outter {
  position: relative;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
}

.input_txt {
  font-size: 28rpx;
  color: #999;
  position: absolute;
  left: 20rpx;
}

.input1 {
  font-size: 28rpx;
  color: #333;
  padding-left: 130rpx;
  height: 80rpx;
  line-height: 80rpx;
  min-height: 40rpx;
}

.other_info{
  padding-bottom: 110rpx;
}

.other_info image {
  width: 100%;
}
