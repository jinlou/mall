.container {
  position: absolute;
  background-color: #f2f2f2;
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  color: #939393;
}

.addr_item {
  padding: 10rpx 20rpx;
  background: #fff;
  margin-bottom: 1px;
}

.addr_first {
  display: flex;
  justify-content: space-between;
  color: #333;
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.addr_second {
  color: #666;
  font-size: 28rpx;
  width: 90%;
  margin: 0 auto;
}

.addr_third {
  margin-top: 16rpx;
  color: #999;
  font-size: 28rpx;
  display: flex;
  justify-content: flex-end;
}

.addr_third text {
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-left: 30rpx;
}

.add_address{
  width: 90%;
  margin: 100rpx auto 40rpx;
  background: red;
  color: #fff;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 8rpx;
  text-align: center;
}